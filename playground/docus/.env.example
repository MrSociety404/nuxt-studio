# Cloudflare R2 Configuration for Studio OSS uploads
# Copy this file to .env and fill in your values

# Your Cloudflare account ID (found in dashboard URL or R2 overview)
R2_ACCOUNT_ID=

# R2 API Token credentials (create at https://dash.cloudflare.com/?to=/:account/r2/api-tokens)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=

# R2 bucket name
R2_BUCKET_NAME=

# Public URL for the bucket
# Option 1: Use R2.dev subdomain (enable in bucket settings)
#   Example: https://pub-1234567890abcdef.r2.dev
# Option 2: Use custom domain (configure in bucket settings)
#   Example: https://cdn.yourdomain.com
R2_PUBLIC_URL=
